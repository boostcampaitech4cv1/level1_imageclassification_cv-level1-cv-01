{
    "name": "ENet-b0-FineTuning-FC2",
    "n_gpu": 1,
    "wandb": {
        "use": true,
        "init_args": {
            "project": "KH",
            "name": "ENet-b0-FineTuning-FC2"
        }
    },

    "arch": {
        "type": "efficientnet_freeze_fc2",
        "args": {
            "model_name": "efficientnet-b0",
            "num_classes": 18
        }
    },
    "data_loader": {
        "type": "MaskSplitLoader",
        "args":{
            "data_dir": "/opt/ml/input/data/train/",
            "batch_size": 1024,
            "shuffle": true,
            "validation_split": 0.1,
            "num_workers": 3
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 0.001,
            "weight_decay": 0.0001,
            "amsgrad": true
        }
    },
    "loss": {
        "type": "CE_loss",
        "args": {
        }
    },
    "metrics": [
        "accuracy", "f1_score"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 1000,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 100,

        "save_dir": "saved/",
        "save_period": 1,
        "verbosity": 2,
        
        "monitor": "min val_loss",
        "early_stop": 10,

        "tensorboard": false
    }
}