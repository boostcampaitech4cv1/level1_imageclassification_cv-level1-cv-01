{
    "name": "split-example",
    "n_gpu": 1,

    "arch": {
        "type": "efficientnet-b4",
        "args": {
            "num_classes":18
        }
    },
    "data_loader": {
        "type": "MaskSplitLoader",
        "args":{
            "data_dir": "/opt/ml/input/data/train/",
            "batch_size": 128,
            "shuffle": true,
            "validation_split": 0.1,
            "num_workers": 4
        }
    },
    "optimizer": {
        "type": "AdamW",
        "args":{
            "lr": 0.0001,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
    "loss": "CE_loss",
    "metrics": [
        "accuracy", "f1_score"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 3,
            "gamma": 0.3
        }
    },
    "trainer": {
        "epochs": 14,

        "save_dir": "saved/",
        "save_period": 2,
        "verbosity": 2,
        
        "monitor": "min val_loss",
        "early_stop": 10,

        "tensorboard": false
    }
}